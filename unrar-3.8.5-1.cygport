DESCRIPTION="RAR archive decompressor"
HOMEPAGE="http://www.rarlab.com/"
SRC_URI="http://www.rarlab.com/rar/unrarsrc-${PV}.tar.gz"
SRC_DIR=${PN}

src_compile() {
	lndirs
	cd ${B}
	cygmake -f makefile.cygmin \
		CXX="g++" \
		CXXFLAGS="${CXXFLAGS} -Wno-deprecated" \
		DEFINES="-D_FILE_OFFSET_BITS=64 -D_LARGEFILE_SOURCE -DLITTLE_ENDIAN"
}

src_test() {
	:
}

src_install() {
	cd ${B}
	dobin unrar.exe
	dodoc license.txt readme.txt
}
